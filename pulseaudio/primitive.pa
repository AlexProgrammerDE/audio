load-module module-native-protocol-unix auth-anonymous=true socket=/run/pulse/pulseaudio.socket
load-module module-native-protocol-tcp auth-anonymous=true port=4317

# Load ALSA modules statically
# It's better to load them using module-udev-detect but it misconfigures it as mono
load-module module-alsa-sink

# See https://github.com/raspberrypi/linux/issues/2229#issuecomment-391397669
unload-module module-bluetooth-discover
load-module module-bluetooth-discover autodetect_mtu=yes
